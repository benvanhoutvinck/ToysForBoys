<Window x:Class="WPFToysForBoys.View.ProductsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFToysForBoys.View"
        mc:Ignorable="d"
        Title="ProductsWindow" Height="500" Width="900" ResizeMode="NoResize">
    <DockPanel>
        <Menu DockPanel.Dock="Top" Height="24"></Menu>
        <StackPanel Orientation="Horizontal">
            <StackPanel Width="450">
                <ListBox Height="400" Margin="25"></ListBox>
            </StackPanel>
            <StackPanel Width="400">
                <StackPanel Orientation="Horizontal">
                    <Label Content="Product ID:"></Label>
                    <TextBox Text="procuct id here" IsEnabled="False" VerticalContentAlignment="Center"></TextBox>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        
    </DockPanel>
</Window>
