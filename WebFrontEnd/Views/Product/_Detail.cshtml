
@model WebFrontEnd.Models.ProductListItem


<div class="item col-xs-4 col-lg-4">
    <div class="thumbnail">
        <img class="group list-group-image" src="@Html.GetImageSourceForProductline(Model.ProductLineID)" alt="" />
        <div class="caption">
            <h4 class="group inner list-group-item-heading">
                @Model.ProductName
            </h4>
            <p class="group inner list-group-item-text">
                @Model.Description
            </p>
            <div class="row">
                <div class="col-xs-12 col-md-6">
                    <p class="lead">
                        €@Model.BuyPrice
                    </p>
                </div>
                <div class="col-xs-12 col-md-6">
                    @Html.ActionLink("Buy", "Buy", "Product", new { id = Model.ProductID }, new { @class = "btn btn-success" })
                   
                </div>
            </div>
        </div>
    </div>
</div>
